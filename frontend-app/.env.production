# =================================
# VARIABLES D'ENVIRONNEMENT - PRODUCTION
# =================================

# Configuration de l'API Gateway URL pour le frontend
REACT_APP_API_URL=http://springboot-microservices-production-alb-xyz.us-west-2.elb.amazonaws.com
REACT_APP_ENVIRONMENT=production

# Configuration des microservices (pour référence)
API_GATEWAY_URL=api-gateway:8080
SERVICE_REGISTRY_URL=service-registry:8761

# Configuration Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka.infrastructure.svc.cluster.local:9092

# Configuration MySQL
MYSQL_HOST=mysql.infrastructure.svc.cluster.local
MYSQL_PORT=3306
MYSQL_DATABASE=springboot_microservices

# Configuration Redis
REDIS_HOST=redis-master.infrastructure.svc.cluster.local
REDIS_PORT=6379
