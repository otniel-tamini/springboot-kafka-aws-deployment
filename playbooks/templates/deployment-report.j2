    </div>

    <script>
        // Auto-refresh status every 30 seconds during first 5 minutes
        let refreshCount = 0;
        const maxRefreshes = 10;
        
        function refreshStatus() {
            if (refreshCount < maxRefreshes) {
                setTimeout(() => {
                    // Test if site is accessible
                    fetch('https://{{ cloudfront_domain }}', { mode: 'no-cors' })
                        .then(() => {
                            console.log('Site accessible');
                        })
                        .catch(() => {
                            console.log('Site not yet accessible');
                        });
                    
                    refreshCount++;
                    refreshStatus();
                }, 30000); // 30 seconds
            }
        }
        
        // Start auto-refresh
        refreshStatus();
    </script>
</body>
</html>
