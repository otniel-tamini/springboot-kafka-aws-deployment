# =================================
# VERSIONS ET TAGS
# =================================
COMPOSE_PROJECT_NAME=springboot-kafka-microservices
JAVA_VERSION=17
IMAGE_TAG=latest

# =================================
# PORTS CONFIGURATION
# =================================
# Infrastructure
ZOOKEEPER_PORT=2181
KAFKA_PORT=9092
KAFKA_HOST_PORT=29092
REDIS_PORT=6379

# Database Ports
MYSQL_ORDER_PORT=3307
MYSQL_IDENTITY_PORT=3308
MYSQL_PAYMENT_PORT=3309
MYSQL_PRODUCT_PORT=3310

# Microservices Ports
EUREKA_PORT=8761
API_GATEWAY_PORT=9191
ORDER_SERVICE_PORT=8080
EMAIL_SERVICE_PORT=8086
PAYMENT_SERVICE_PORT=8085
PRODUCT_SERVICE_PORT=8084
IDENTITY_SERVICE_PORT=9898

# =================================
# DATABASE CONFIGURATION
# =================================
MYSQL_ROOT_PASSWORD=root
MYSQL_VERSION=8.0

# Database Names
ORDER_DB_NAME=order_db
IDENTITY_DB_NAME=user_db
PAYMENT_DB_NAME=payment_db
PRODUCT_DB_NAME=product_db

# Database Users
DB_USERNAME=root
DB_PASSWORD=root

# =================================
# KAFKA CONFIGURATION
# =================================
KAFKA_VERSION=7.3.1
KAFKA_BROKER_ID=1
KAFKA_REPLICATION_FACTOR=1

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_VERSION=7.0
REDIS_TIMEOUT=60000

# =================================
# SPRING PROFILES
# =================================
SPRING_PROFILES_ACTIVE=docker

# =================================
# EUREKA CONFIGURATION
# =================================
EUREKA_DEFAULT_ZONE=http://eureka-server:8761/eureka/

# =================================
# MONITORING CONFIGURATION
# =================================
ZIPKIN_BASE_URL=http://zipkin:9411/
TRACING_SAMPLING_PROBABILITY=1.0

# =================================
# CORS CONFIGURATION
# =================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# =================================
# PAYPAL CONFIGURATION (Optional)
# =================================
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_BASE_URL=https://api.sandbox.paypal.com
PAYPAL_MODE=sandbox

# =================================
# NETWORK CONFIGURATION
# =================================
NETWORK_NAME=shop-network
